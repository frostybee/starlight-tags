{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["node", "vite/client"],
    "noEmit": true
  },
  "include": [
    "index.ts",
    "middleware.ts",
    "locals.d.ts",
    "src/**/*.ts",
    "src/**/*.astro",
    "src/env.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "../../node_modules",
    "dist",
    "tests",
    "src/components/index.ts"
  ]
}
