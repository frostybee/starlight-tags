---
import type { ProcessedTag } from '../schemas/tags.js';
import TagBadge from './TagBadge.astro';

interface Props {
  subject: string;
  tagsMap: Map<string, ProcessedTag>;
  showProgress?: boolean;
  currentTagId?: string;
  maxItemsPerLevel?: number;
}

const { 
  subject, 
  tagsMap, 
  showProgress = true, 
  currentTagId,
  maxItemsPerLevel = 5
} = Astro.props;

// Get all tags for this subject
const subjectTags = Array.from(tagsMap.values())
  .filter(tag => tag.subject === subject);

// Group by difficulty level
const difficultyLevels = ['beginner', 'intermediate', 'advanced'] as const;
const tagsByDifficulty = difficultyLevels.reduce((groups, level) => {
  groups[level] = subjectTags
    .filter(tag => tag.difficulty === level)
    .sort((a, b) => {
      // Sort by skill level, then by count
      if (a.skillLevel && b.skillLevel) {
        return a.skillLevel - b.skillLevel;
      }
      return b.count - a.count;
    })
    .slice(0, maxItemsPerLevel);
  return groups;
}, {} as Record<typeof difficultyLevels[number], ProcessedTag[]>);

// Calculate progress if current tag is provided
let progressInfo = null;
if (currentTagId && showProgress) {
  const currentTag = tagsMap.get(currentTagId);
  if (currentTag && currentTag.subject === subject) {
    const currentDifficulty = currentTag.difficulty;
    const allSubjectTags = Object.values(tagsByDifficulty).flat();
    const currentIndex = allSubjectTags.findIndex(tag => tag.id === currentTagId);
    
    progressInfo = {
      currentDifficulty,
      progress: currentIndex >= 0 ? Math.round(((currentIndex + 1) / allSubjectTags.length) * 100) : 0,
      completed: currentIndex + 1,
      total: allSubjectTags.length
    };
  }
}

const totalEstimatedTime = Object.values(tagsByDifficulty)
  .flat()
  .filter(tag => tag.estimatedTime)
  .reduce((total, tag) => total + (tag.estimatedTime || 0), 0);

const hasContent = Object.values(tagsByDifficulty).some(tags => tags.length > 0);
---

{hasContent && (
  <div class="learning-track">
    <div class="learning-track__header">
      <h3 class="learning-track__title">
        üìö {subject.charAt(0).toUpperCase() + subject.slice(1)} Learning Track
      </h3>
      
      <div class="learning-track__meta">
        {totalEstimatedTime > 0 && (
          <span class="learning-track__time">
            ‚è±Ô∏è {Math.round(totalEstimatedTime / 60)}h {totalEstimatedTime % 60}m total
          </span>
        )}
        {progressInfo && (
          <div class="learning-track__progress">
            <span class="learning-track__progress-text">
              Progress: {progressInfo.completed}/{progressInfo.total}
            </span>
            <div class="learning-track__progress-bar">
              <div 
                class="learning-track__progress-fill" 
                style={`width: ${progressInfo.progress}%`}
              />
            </div>
          </div>
        )}
      </div>
    </div>
    
    <div class="learning-track__content">
      {difficultyLevels.map((level) => {
        const levelTags = tagsByDifficulty[level];
        if (levelTags.length === 0) return null;
        
        const isCurrentLevel = progressInfo?.currentDifficulty === level;
        
        return (
          <div 
            class={`learning-track__level ${isCurrentLevel ? 'learning-track__level--current' : ''}`}
            key={level}
          >
            <div class="learning-track__level-header">
              <h4 class="learning-track__level-title">
                {level === 'beginner' && 'üå± Beginner'}
                {level === 'intermediate' && 'üåø Intermediate'}
                {level === 'advanced' && 'üå≥ Advanced'}
              </h4>
              <span class="learning-track__level-count">
                {levelTags.length} topic{levelTags.length !== 1 ? 's' : ''}
              </span>
            </div>
            
            <div class="learning-track__level-content">
              {levelTags.map((tag, index) => {
                const isCurrent = tag.id === currentTagId;
                const isCompleted = progressInfo && 
                  Object.values(tagsByDifficulty).flat().indexOf(tag) < 
                  Object.values(tagsByDifficulty).flat().findIndex(t => t.id === currentTagId);
                
                return (
                  <div 
                    class={`learning-track__item ${isCurrent ? 'learning-track__item--current' : ''} ${isCompleted ? 'learning-track__item--completed' : ''}`}
                    key={tag.id}
                  >
                    {isCurrent && (
                      <div class="learning-track__current-indicator">
                        üìç You are here
                      </div>
                    )}
                    
                    <div class="learning-track__item-main">
                      <TagBadge 
                        tag={tag} 
                        size="medium" 
                        variant={isCurrent ? "solid" : isCompleted ? "ghost" : "outline"}
                        showCount={false}
                      />
                      
                      <div class="learning-track__item-meta">
                        {tag.estimatedTime && (
                          <span class="learning-track__item-time">
                            {tag.estimatedTime}min
                          </span>
                        )}
                        {tag.skillLevel && (
                          <div class="learning-track__item-skill">
                            Level {tag.skillLevel}/10
                          </div>
                        )}
                      </div>
                    </div>
                    
                    {tag.description && (
                      <p class="learning-track__item-description">
                        {tag.description}
                      </p>
                    )}
                    
                    {tag.prerequisites && tag.prerequisites.length > 0 && (
                      <div class="learning-track__item-prereqs">
                        <span class="learning-track__prereqs-label">Requires:</span>
                        {tag.prerequisites.slice(0, 3).map(prereqId => {
                          const prereqTag = tagsMap.get(prereqId);
                          return prereqTag ? (
                            <TagBadge 
                              key={prereqId}
                              tag={prereqTag} 
                              size="small" 
                              variant="ghost"
                              showCount={false}
                            />
                          ) : null;
                        })}
                        {tag.prerequisites.length > 3 && (
                          <span class="learning-track__prereqs-more">
                            +{tag.prerequisites.length - 3} more
                          </span>
                        )}
                      </div>
                    )}
                    
                    {index < levelTags.length - 1 && (
                      <div class="learning-track__connector" />
                    )}
                  </div>
                );
              })}
            </div>
          </div>
        );
      })}
    </div>
    
    <div class="learning-track__footer">
      <p class="learning-track__footer-text">
        üí° Complete topics in order for the best learning experience
      </p>
    </div>
  </div>
)}

