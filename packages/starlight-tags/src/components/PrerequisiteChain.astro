---
/**
 * PrerequisiteChain: Displays a visual chain of prerequisite tags
 *
 * Usage in MDX:
 * ```mdx
 * import { PrerequisiteChain } from 'starlight-tags/components';
 *
 * <PrerequisiteChain tagId="advanced-api" />
 * <PrerequisiteChain tagId="advanced-api" showDescription={false} />
 * ```
 *
 * Or with a pre-fetched tag object (for internal use):
 * ```astro
 * <PrerequisiteChain tag={processedTag} tagsMap={tagsMap} />
 * ```
 */
import { initTags, getTag, getTags } from 'virtual:starlight-tagging/tags';
import type { ProcessedTag } from '../schemas/tags.js';
import TagBadge from './TagBadge.astro';

interface Props {
  /** Tag ID to show prerequisites for */
  tagId?: string;
  /** Pre-fetched tag object (for internal/advanced use) */
  tag?: ProcessedTag;
  /** Pre-fetched tags map (for internal/advanced use) */
  tagsMap?: Map<string, ProcessedTag>;
  showDescription?: boolean;
  maxChainLength?: number;
  /** The base path at which a language is served. `undefined` for root locale slugs. */
  locale?: string;
}

const {
  tagId,
  tag: tagProp,
  tagsMap: tagsMapProp,
  showDescription = true,
  maxChainLength = 5,
  locale
} = Astro.props;

// Resolve tag and tagsMap: use provided objects, or fetch internally
let tag: ProcessedTag | undefined = tagProp;
let tagsMap: Map<string, ProcessedTag> = tagsMapProp || new Map();

if (!tag && tagId) {
  await initTags();
  tag = getTag(tagId);
  tagsMap = getTags();
}

// Early return if no tag found
if (!tag) {
  if (import.meta.env.DEV && tagId) {
    console.warn(`[PrerequisiteChain] Tag not found: "${tagId}"`);
  }
  return;
}

// Get prerequisite chain with tag objects
const prerequisiteChain = (tag.prerequisiteChain || [])
  .slice(0, maxChainLength)
  .map(id => tagsMap.get(id))
  .filter(Boolean) as ProcessedTag[];

const hasPrerequisites = prerequisiteChain.length > 0;
---

{hasPrerequisites && (
  <section class="prerequisite-chain" aria-labelledby="prerequisite-chain-title">
    <div class="prerequisite-chain__header">
      <h4 class="prerequisite-chain__title" id="prerequisite-chain-title">
        Prerequisites
      </h4>
      {showDescription && (
        <p class="prerequisite-chain__description">
          Complete these topics before starting this content
        </p>
      )}
    </div>

    <div class="prerequisite-chain__content">
      <ol class="prerequisite-chain__flow" aria-label="Learning path">
        {prerequisiteChain.map((prereqTag, index) => (
          <li class="prerequisite-chain__item">
            <TagBadge
              tag={prereqTag}
              size="medium"
              variant="outline"
              showCount={false}
              {locale}
            />
            {index < prerequisiteChain.length - 1 && (
              <span class="prerequisite-chain__arrow" aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              </span>
            )}
          </li>
        ))}
        {prerequisiteChain.length > 0 && (
          <li class="prerequisite-chain__item prerequisite-chain__item--current">
            <span class="prerequisite-chain__arrow prerequisite-chain__arrow--final" aria-hidden="true">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </span>
            <div class="prerequisite-chain__current">
              <span class="prerequisite-chain__current-label">You are here</span>
              <TagBadge
                tag={tag}
                size="medium"
                variant="solid"
                showCount={false}
                clickable={false}
                {locale}
              />
            </div>
          </li>
        )}
      </ol>

      {tag.prerequisiteChain && tag.prerequisiteChain.length > maxChainLength && (
        <p class="prerequisite-chain__more">
          ... and {tag.prerequisiteChain.length - maxChainLength} more prerequisites
        </p>
      )}
    </div>
  </section>
)}

<style>
  .prerequisite-chain {
    background: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-hairline-shade);
    border-radius: var(--sl-border-radius);
    padding: 1rem;
    margin: 1rem 0;
  }

  .prerequisite-chain__header {
    margin-bottom: 0.75rem;
  }

  .prerequisite-chain__title {
    margin: 0 0 0.25rem 0;
    font-size: var(--sl-text-base);
    font-weight: 600;
    color: var(--sl-color-text);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .prerequisite-chain__description {
    margin: 0;
    font-size: var(--sl-text-sm);
    color: var(--sl-color-text-accent);
    line-height: 1.4;
  }

  .prerequisite-chain__content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .prerequisite-chain__flow {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .prerequisite-chain__item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .prerequisite-chain__item--current {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .prerequisite-chain__arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--sl-color-text-accent);
    user-select: none;
    flex-shrink: 0;
  }

  .prerequisite-chain__arrow svg {
    width: 1rem;
    height: 1rem;
  }

  .prerequisite-chain__arrow--final {
    color: var(--sl-color-accent);
  }

  .prerequisite-chain__current {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .prerequisite-chain__current-label {
    font-size: var(--sl-text-xs);
    color: var(--sl-color-text-accent);
    white-space: nowrap;
    margin-bottom: 0.25rem;
  }

  .prerequisite-chain__more {
    margin: 0;
    font-size: var(--sl-text-sm);
    color: var(--sl-color-text-accent);
    font-style: italic;
  }

  @media (max-width: 768px) {
    .prerequisite-chain__flow {
      flex-direction: column;
      align-items: flex-start;
    }

    .prerequisite-chain__item {
      flex-direction: column;
      align-items: flex-start;
    }

    .prerequisite-chain__arrow svg {
      transform: rotate(90deg);
    }

    .prerequisite-chain__current {
      align-items: flex-start;
    }
  }
</style>
